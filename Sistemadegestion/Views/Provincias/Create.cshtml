@model Model.Provincia

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">

    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-files-o"></i>Formulario Provincias</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
            <li><i class="icon_document_alt"></i>Form</li>
            <li><i class="fa fa-files-o"></i>Provincias</li>
        </ol>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Formulario  de ingresion de provincias
            </header>
            <div class="panel-body">
                <div class="form">



                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                          
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label for="COD_REGION" class="control-label col-lg-2">Codigo de Region<span class="required">*</span></label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.COD_REGION, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                                    @Html.ValidationMessageFor(model => model.COD_REGION, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="COD_PROVINCIA" class="control-label col-lg-2">Codigo de provincias<span class="required">*</span></label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.COD_PROVINCIA, new { htmlAttributes = new { @class = "form-control",@type="number" } })
                                    @Html.ValidationMessageFor(model => model.COD_PROVINCIA, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="COD_PROVINCIA" class="control-label col-lg-2">Nombre de provincia<span class="required">*</span></label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.NOM_PROVINCIA, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.NOM_PROVINCIA, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Guardar" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }
                    <div>
                        @*@Html.ActionLink("Back to List", "Index")*@
                    </div>
                </div>

            </div>
        </section>
    </div>
</div>