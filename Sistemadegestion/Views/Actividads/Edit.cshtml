@model Model.Actividad

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-files-o"></i>Formulario Actividades</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
            <li><i class="icon_document_alt"></i>Form</li>
            <li><i class="fa fa-files-o"></i>Actividades</li>
        </ol>
    </div>
</div>







<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Formulario  de edicion  de Actividades
            </header>
            <div class="panel-body">
                <div class="form">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                          
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.id)

                            <div class="form-group">
                                <label for="COD_ACTIVIDAD" class="control-label col-lg-2">Codigo de Actividades<span class="required">*</span></label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.COD_ACTIVIDAD, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.COD_ACTIVIDAD, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="DESC_ACTIVIDAD" class="control-label col-lg-2">Descripcion de Actividad<span class="required">*</span></label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.DESC_ACTIVIDAD, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DESC_ACTIVIDAD, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Guardar" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }

                    <div>
                        @*@Html.ActionLink("Back to List", "Index")*@
                    </div>
                </div>

            </div>
        </section>
    </div>
</div>
