@model Model.Region

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Formulario  de ingresion de regiones
            </header>
            <div class="panel-body">
                <div class="form">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                         
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label for="COD_REGION" class="control-label col-lg-2">Codigo de region<span class="required">*</span></label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.COD_REGION, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.COD_REGION, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="NOM_REGION" class="control-label col-lg-2">Nombre de region<span class="required">*</span></label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.NOM_REGION, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.NOM_REGION, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Guardar" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </section>
    </div>
</div>
