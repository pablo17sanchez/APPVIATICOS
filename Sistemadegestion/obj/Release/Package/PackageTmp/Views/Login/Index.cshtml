@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}

<div class="container">


    @using (Html.BeginForm("Acceder", "Login", FormMethod.Post, new { @class = "login-form" }))
    {
    
            <div class="login-wrap">
                <p class="login-img"><i class="glyphicon glyphicon-off"></i></p>
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input type="text" class="form-control" name="Username" placeholder="Username" autofocus>
                </div>
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                    <input type="password" name="Password" class="form-control" placeholder="Password">
                </div>

                <button class="btn btn-primary btn-lg btn-block" data-ajax="true" type="submit">Ingresar</button>

            </div>
    

    }
    <div class="text-right">
        <div class="credits">

        </div>
    </div>
</div>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<script src="~/Scripts/jquery.form.js"></script>

<script src="~/Scripts/ini.js"></script>

<script src="~/Areas/Admin/Assets/js/jquery.anexgrid.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
